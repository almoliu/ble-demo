<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="TransActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@android:color/transparent</item>
        <item name="backgroundStacked">@android:color/holo_green_dark</item>
        <item name="backgroundSplit">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>

        <!-- Support library compatibility -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundSplit">@android:color/transparent</item>
        <item name="android:textColor">@android:color/holo_green_light</item>
        <item name="android:backgroundStacked">@android:color/holo_green_dark</item>
        <item name="android:actionBarSize">?android:attr/actionBarSize</item>
    </style>

</resources>
